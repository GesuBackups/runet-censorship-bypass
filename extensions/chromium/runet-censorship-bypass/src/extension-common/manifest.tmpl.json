{
  "manifest_version": 2,

  "name": "__MSG_extName__",
  "default_locale": "ru",
  "description": "__MSG_extDesc__",
  "version": "0.0.${version}",
  "icons": {
    "128": "icons/default-128.png"
  },
  "author": "anticensority+owners@googlegroups.com",

  "permissions": [
      "proxy"
    , "alarms"
    , "storage"
    , "unlimitedStorage"
    , "<all_urls>"
    , "tabs"
    , "contextMenus"
    , "notifications"
    ${extra_permissions}
  ],
  "minimum_chrome_version": "55.0.0.0",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "91.1.0"
    }
  },
  "commands": {
    "toggle-pac-script": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Turn on/off current PAC-script"
    }
  },

  "background": {
    ${persistent}
    "scripts": [
        "00-init-apis.js"
      ${scripts_0x}
      , "11-error-handlers-api.js"
      , "12-errors-lib.js"
      , "13-http-lib.js"
      , "15-firefox-proxy-settings.js"
      ${scripts_2x}
      , "35-pac-kitchen-api.js"
      , "37-sync-pac-script-with-pac-provider-api.js"
      , "70-menu-items.js"
      , "75-context-menus.js"
      , "76-hotkeys.js",
      ${scripts_8x}
    ]
  },

  "browser_action": {
    "default_title": "Этот сайт благословлён | Версия ${version + versionSuffix}",
    "default_popup": "/pages/options/index.html"
  },
  "options_ui": {
     "page": "/pages/options/index.html",
     "chrome_style": false
   }

}
